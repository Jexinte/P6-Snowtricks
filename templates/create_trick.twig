{% extends 'layout.twig' %}

{% block icon_img %}
    <link rel="icon" type="image/png" href="/favicon.ico"/>
{% endblock %}
{% block title %}
    <title>Cr√©ation d'un trick | {{ parent () }}  </title>
{% endblock %}

{% block css_page %}
    <link rel="stylesheet" href='/assets/css/create-trick.css'>
{% endblock %}

{% block content %}
    <header>
        <nav>
            <a href="/" id="back-homepage"><i class="fa-solid fa-arrow-left-long"></i></a>

        </nav>
    </header>
    <div class="container-fluid" id="trick">
        <div class=" container-fluid" id="banner-trick">
            <img src="/assets/img/banner/banner-homepage.jpg" alt="banner">
        </div>

        <div class="container-fluid" id="form">
            <div class="row">
                {{ form_start(form,{'action':path('create_trick_post')}) }}
                <button class="btn btn-dark" type="submit" id="submit">Envoyer</button>
                {{ form_end(form) }}

            </div>
        </div>
    </div>
    <footer id="footer">
        <p class="text-center footer-paragraph">Copyright @ 2023</p>
        <nav id="nav-mobile">
            <a href="{{ path('homepage') }}" class="mobile-link" id="homepage-link"><i class="fa-solid fa-house"></i></a>
            {% if user_connected is defined and user_connected is not empty ? user_connected.roles[0]  : '' %}
                <a href="{{ path('logout') }}" class="mobile-link" id="log-out"><i class="fa-solid fa-right-from-bracket"></i></a>
            {% else %}
                <a href="{{ path('login') }}" class="mobile-link" id="log-in"><i class="fa-solid fa-key"></i></a>
                <a href="{{ path('registration_get') }}" class="mobile-link" id="sign-up"><i class="fa-solid fa-user-plus"></i></a>
            {% endif %}
        </nav>
    </footer>
{% endblock %}
{% block javascript %}
<script src="/assets/js/update-createtrick-banner.js"></script>
{% endblock %}
