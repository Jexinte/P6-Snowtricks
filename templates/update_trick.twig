{% extends 'layout.twig' %}

{% block title %}
    <title>Modifier trick | {{ parent () }}  </title>
{% endblock %}
{% block css_page %}
    <link rel="stylesheet" href='/assets/css/update_trick.css'>
{% endblock %}
{% block content %}
    <header>
        <nav>
            <a href="/" id="back-homepage"><i class="fa-solid fa-arrow-left-long"></i></a>
        </nav>

    </header>
    <div class="container-fluid" id="trick">
        <div class=" container-fluid" id="banner-trick">
            <img src="{{ medias is defined and medias[0].isBanner == 1 ? medias[0].mediaPath : '/assets/img/banner/banner_homepage.jpg' }}"
                 alt="banner">
            <div class="options-box">
                <a href="{{ path('update_trick_media_page',{'id':medias[0].id}) }}" class="options-media" id="update"><i
                            class="fa-solid fa-pencil"></i></a>
                <a href="{{ path('delete_trick_media',{'id':medias[0].id}) }}" class="options-media" id="delete"><i
                            class="fa-solid fa-trash"></i></a>
            </div>
        </div>
        <div id="trick-content">
            <h1>{{ trick is defined ? trick.name : '' }}</h1>
            <div class="medias">
                {% for media in medias %}

                    {% if media.mediaType == "png" or media.mediaType == "jpg" or media.mediaType == "webp" %}
                        <div class="media-box">
                            <img src="{{ media is defined ? media.mediaPath : '' }}" alt="test" width="200"
                                 class="image">
                            <div class="options-box">
                                <a href="{{ path('update_trick_media_page',{'id':media.id}) }}" class="options-media"
                                   id="update"><i class="fa-solid fa-pencil"></i></a>
                                <a href="{{ path('delete_trick_media',{'id':media.id}) }}" class="options-media"
                                   id="delete"><i class="fa-solid fa-trash"></i></a>
                            </div>
                        </div>


                    {% elseif media.mediaType == "mp4" %}
                        <div class="media-box">
                            <embed autoplay="false" width="200" src="{{ media is defined ? media.mediaPath : '' }}"
                                   type="video/{{ media.mediaType }}">
                            <div class="options-box">
                                <a href="{{ path('update_trick_media_page',{'id':media.id}) }}" class="options-media"
                                   id="update"><i class="fa-solid fa-pencil"></i></a>
                                <a href="{{ path('delete_trick_media',{'id':media.id}) }}" class="options-media"
                                   id="delete"><i class="fa-solid fa-trash"></i></a>
                            </div>
                        </div>

                    {% elseif media.mediaType == "web" %}
                        <div class="media-box">
                            <iframe autoplay="0" width="200" src="{{ media.mediaPath }}"></iframe>
                            <div class="options-box">
                                <a href="{{ path('update_trick_media_page',{'id':media.id}) }}" class="options-media"
                                   id="update"><i class="fa-solid fa-pencil"></i></a>
                                <a href="{{ path('delete_trick_media',{'id':media.id}) }}" class="options-media"
                                   id="delete"><i class="fa-solid fa-trash"></i></a>
                            </div>
                        </div>

                    {% endif %}

                {% endfor %}

            </div>

            <div class="about">
                <div class="row">
                    {% if user_connected is defined and user_connected == 1 %}
                        {{ form_start(form,{'action':path('update_trick_content_put',{'trickname':trick.name|lower,'id':trick.id})}) }} {{ form_end(form) }}

                    {% endif %}
                </div>
            </div>
        </div>
    </div>


    <footer id="footer">
        <p class="text-center footer-paragraph">Copyright @ 2023</p>
        <nav id="nav-mobile">
            <a href="/" class="mobile-link" id="homepage-link"><i class="fa-solid fa-house"></i></a>
            <a href="#" class="mobile-link" id="bookmark"><i class="fa-solid fa-bookmark"></i></a>
            {% if user_connected is defined and user_connected == 1 %}
                <a href="/logout" class="mobile-link" id="log-out"><i class="fa-solid fa-right-from-bracket"></i></a>
            {% else %}
                <a href="/signin" class="mobile-link" id="log-in"><i class="fa-solid fa-key"></i></a>
                <a href="/signup" class="mobile-link" id="sign-up"><i class="fa-solid fa-user-plus"></i></a>
            {% endif %}
        </nav>
    </footer>
    <script src="/assets/js/mediaAnimation.js"></script>
{% endblock %}
