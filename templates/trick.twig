{% extends 'layout.twig' %}

{% block title %}
    <title>{{ trick.name is defined ? trick.name : '' }} | {{ parent () }}  </title>
{% endblock %}
{% block css_page %}
    <link rel="stylesheet" href='/assets/css/trick.css'>
{% endblock %}
{% block content %}
    <header>
        <nav>
            <a href="/" id="back-homepage"><i class="fa-solid fa-arrow-left-long"></i></a>
        </nav>

    </header>
    <div class="container-fluid" id="trick">
        <div class=" container-fluid" id="banner-trick">
            {# Bannière du trick sélectionné #}
            <img src="{{ medias is defined ? medias[0].mediaPath : '' }}" alt="banner">
        </div>
        <div id="trick-content">
            <h1>{{ trick is defined ? trick.name : '' }}</h1>
            <div class="medias">
                {# Pour le moment on va laisser comme ça ainsi lorsque j'aurai termné les dernières grosses fonctionnalités je reviendrai en arrière au fur et à mesure pour gérer ses détails #}
                {% for media in medias %}

                    {% if media.mediaType != "mp4" %}
                        <div class="media-box">
                            <img src="{{ media is defined ? media.mediaPath : '' }}" alt="test" width="200" height="200"
                                 class="image">
                        </div>
                    {% else %}
                        <div class="media-box">
                            <embed autoplay="false" width="200" src="{{ media is defined ? media.mediaPath : '' }}"
                                   type="video/{{ media.mediaType }}">
                        </div>


                    {% endif %}


                {% endfor %}
                {% if trick.embedUrl  is not null%}
                    <div class="media-box">

                        <iframe width="200" src="{{ trick.embedUrl is defined ? trick.embedUrl : '' }}"></iframe>
                    </div>
                {% endif %}

            </div>

            <div class="about">
                <p>
                    {{ trick is defined ? trick.description : '' }}
                </p>
                <div class="trick-details">
                    <p class="trick-date">{{ trick is defined ? trick_date : '' }} </p>
                    <p class="trick-group">{{ trick is defined ? trick.trickGroup }}</p>
                </div>

                <div class="trick-options">
                    {% if user_connected is defined and user_connected == 1 %}
                    <form action="#" method="post" class="options-form">
                        <button type="submit" class="options-button" name="update" id="update">
                            <i class="fa-solid fa-pencil"></i>
                        </button>
                        <button type="submit" class="options-button" name="delete" id="delete"><i
                                    class="fa-solid fa-trash"></i></button>
                    </form>


                </div>
            </div>
        </div>
        <div id="form">
            <h2 class="text-center">Ajouter un commentaire </h2>

            <form action="/comment" method="post">
                <input class="form-control" type="text" name="comment" id="comment" placeholder="John">
                <input type="submit" class="btn text-white bg-black mb-3" name="submit" id="submit"
                       value="Laisser un commentaire">
                <p class="error-comment">{{ exceptions.content_exception is defined ? exceptions.content_exception : '' }}</p>
                <p class="error-comment">{{ exceptions.content_wrong_format_exception is defined ? exceptions.content_wrong_format_exception : '' }}</p>
            </form>
        </div>
        {% else %}
            <h2 class="user-not-logged">Afin d'ajouter un commentaire,merci de vous <a href="/signin">connectez !</a>
            </h2>
        {% endif %}

        <div id="comments">
            <h2>Commentaires</h2>
            {% if comments is defined  and comments is not empty %}

            {% for comment in  comments %}
            <div class="user-box">
                <img src="{{ comment.userProfileImage }}" alt="" width="200">
                <h2>{{ comment.username }}</h2>
                <p class="comment">{{ comment.content }}</p>
            </div>
        </div>
        {% endfor %}
    {% else %}
        <h2>Soyez le premier commentaire !</h2>
        {% endif %}

    </div>

    <footer id="footer">
        <p class="text-center footer-paragraph">Copyright @ 2023</p>
        <nav id="nav-mobile">
            <a href="/" class="mobile-link" id="homepage-link"><i class="fa-solid fa-house"></i></a>
            <a href="#" class="mobile-link" id="bookmark"><i class="fa-solid fa-bookmark"></i></a>
            {% if user_connected is defined and user_connected == 1 %}
                <a href="/logout" class="mobile-link" id="log-out"><i class="fa-solid fa-right-from-bracket"></i></a>
            {% else %}
                <a href="/signin" class="mobile-link" id="log-in"><i class="fa-solid fa-key"></i></a>
                <a href="/signup" class="mobile-link" id="sign-up"><i class="fa-solid fa-user-plus"></i></a>
            {% endif %}
        </nav>
    </footer>
    <script src="/assets/js/mediaAnimation.js"></script>
{% endblock %}
