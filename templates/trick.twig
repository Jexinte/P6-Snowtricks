{% extends 'layout.twig' %}

{% block title %}
    <title>{{ trick.name is defined ? trick.name : '' }} | {{ parent () }}  </title>
{% endblock %}
{% block css_page %}
    <link rel="stylesheet" href='/assets/css/trick.css'>
{% endblock %}
{% block content %}
    <header>
        <nav>
            <a href="/" id="back-homepage"><i class="fa-solid fa-arrow-left-long"></i></a>
        </nav>

    </header>
    <div class="container-fluid" id="trick">
        <div class=" container-fluid" id="banner-trick">
            {# Bannière du trick sélectionné #}
            {% if medias is defined and medias is not empty and medias[0].isBanner == 1 %}
                <img src="{{ medias[0].mediaPath }}"
                     alt="banner">
                {% else %}
                    <img src="/assets/img/banner/banner_homepage.jpg" alt="banner">
            {% endif %}

        </div>
        <div id="trick-content">
            <h1>{{ trick is defined ? trick.name : '' }}</h1>
            <div class="medias">
                {# Pour le moment on va laisser comme ça ainsi lorsque j'aurai termné les dernières grosses fonctionnalités je reviendrai en arrière au fur et à mesure pour gérer ses détails #}
                {% for media in medias %}

                    {% if media.mediaType == "png" or media.mediaType == "jpg" or media.mediaType == "webp" %}
                        <div class="media-box">
                            <img src="{{ media is defined ? media.mediaPath : '' }}" alt="test" width="200" height="200"
                                 class="image">
                        </div>
                    {% elseif media.mediaType == "mp4" %}
                        <div class="media-box">
                            <embed autoplay="false" width="200" src="{{ media is defined ? media.mediaPath : '' }}"
                                   type="video/{{ media.mediaType }}">
                        </div>
                    {% elseif media.mediaType == "web" %}
                        <div class="media-box">
                            <iframe width="200" src="{{ media.mediaPath }}"></iframe>
                        </div>
                    {% endif %}

                {% endfor %}


            </div>

            <div class="about">
                <p>
                    {{ trick is defined ? trick.description : '' }}
                </p>
                <div class="trick-details">
                    <p class="trick-date">{{ trick_date is defined ? trick_date : '' }} </p>
                    <p class="trick-group">{{ trick is defined ? trick.trickGroup }}</p>
                </div>

                <div class="trick-options">
                    {% if user_connected is defined and user_connected == 1 %}

                    <a href="{{ path('update_trick_get',{'id':trick.id,'trickname':trick.name}) }}"
                       class="options-button" id="update"><i class="fa-solid fa-pencil"></i></a>
                    {#                        <a href="#" class="options-button"  id="delete"><i class="fa-solid fa-trash"></i></a> #}
                    <form action="{{ path('delete_trick',{trickname:trick.name,id:trick.id}) }}" method="post">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="options-button" id="delete"><i class="fa-solid fa-trash">
                            </i></button>
                    </form>

                </div>
            </div>
        </div>
        <div id="form">
            <h2 class="text-center">Ajouter un commentaire </h2>
            {{ form_start(form,{'action':path('add_comment',{id:trick.id})}) }} {{ form_end(form) }}
        </div>
        {% else %}
            <h2 class="user-not-logged">Afin d'ajouter un commentaire,merci de vous <a href="/signin">connectez !</a>
            </h2>
        {% endif %}

        <div id="comments">
            <h2>Commentaires</h2>
            {% if comments is defined  and comments is not empty %}

            {% for comment in  comments %}
            <div class="user-box">
                <img src="{{ comment.userProfileImage }}" alt="" width="200">
                <h2>{{ comment.username }}</h2>
                <p class="comment">{{ comment.content }}</p>
            </div>
        </div>
        {% endfor %}
        <ul class="pagination">
            <li class="page-item {{  currentPage == 1 ? "disabled" : '' }}">
            <a href="/{{ trick.name }}/details/{{ trick.id }}?page={{currentPage - 1 }}" class="page-link">Précédent</a>
            </li>
            {% for page in 1..pages %}
                <li class="page-item {{ currentPage == page ? "active" : ''}} ">
                    <a href="/{{ trick.name }}/details/{{ trick.id }}?page={{ page }} " class="page-link">{{ page }}</a>
                </li>
            {% endfor %}
                <li class="page-item {{ currentPage == pages ? "disabled" : ''}}">
                    <a href="/{{ trick.name }}/details/{{ trick.id }}?page={{  currentPage + 1 }}" class="page-link">Suivant</a>
                </li>
        </ul>
    {% else %}
        <h2>Soyez le premier commentaire !</h2>
        {% endif %}

    </div>
    <footer id="footer">
        <p class="text-center footer-paragraph">Copyright @ 2023</p>
        <nav id="nav-mobile">
            <a href="/" class="mobile-link" id="homepage-link"><i class="fa-solid fa-house"></i></a>
            <a href="#" class="mobile-link" id="bookmark"><i class="fa-solid fa-bookmark"></i></a>
            {% if user_connected is defined and user_connected == 1 %}
                <a href="/logout" class="mobile-link" id="log-out"><i class="fa-solid fa-right-from-bracket"></i></a>
            {% else %}
                <a href="/signin" class="mobile-link" id="log-in"><i class="fa-solid fa-key"></i></a>
                <a href="/signup" class="mobile-link" id="sign-up"><i class="fa-solid fa-user-plus"></i></a>
            {% endif %}
        </nav>
    </footer>
    <script src="/assets/js/mediaAnimation.js"></script>
{% endblock %}
