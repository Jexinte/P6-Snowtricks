{% extends 'layout.twig' %}
{% block icon_img %}
    <link rel="icon" type="image/png" href="/favicon.ico"/>
{% endblock %}
{% block title %}
    <title>Connexion | {{ parent ()}}  </title>
{% endblock %}

{% block css_page %}
    <link rel="stylesheet" href='/assets/css/forgot_password.css'>
{% endblock %}

{% block content %}
    <header>
        <nav>
            <a href="/"><img src="/assets/img/logo/logo.jpg" alt="main logo" height="60"></a>
            <ul>
                <li><a href=".">Home</a></li>
                <li><a href="#">Tricks</a></li>
                <li><a href="/signup">Inscription</a></li>
                <li><a href="/signin">Connexion</a></li>
            </ul>
        </nav>
    </header>
    <div class="container-fluid" id="forgot-password">
    <h1 class="text-center" >Mot de passe oublié</h1>
    <div class="row">
        <form class="pt-5" action="/reset-password" enctype="multipart/form-data" method="post" >

            {#         USER #}
            <div class="col-sm-12 col-md-12">
                <div class="mb-3 user-box">
                    <label for="username" class="form-label">Utilisateur</label>
                    <input class="form-control" type="text" name="username" id="username" placeholder="John">
                    <p class="text-danger" id="error-username">

                    </p>
                </div>
            </div>
            <input type="submit" class="btn text-white bg-black mb-3" name="submit" id="submit" value="Réinitialisation de mot de passe">
        </form>
    </div>
    </div>
{% endblock %}
